<% @games.each do |game| %>
<div class="game<%= " over" if game.over? %>">
	<div>
		<p>X's<br><strong><%= game.player_two.to_s[7,10] unless game.player_one.blank? %></strong></p>
		<%= render :partial => 'game', :locals => {:game => game} %>
		<p><strong><%= game.player_one.to_s[7,10] unless game.player_two.blank? %></strong><br>O's</p>
	</div>
</div>
<% end %>
